<h1>聊天室一览</h1>

<table>
  <thead>
    <tr>
      <th>Roomcover</th>
      <th>名称</th>
      <th>Privacy</th>
      <th>Popularity</th>
      <th>Memnum</th>
      <th>Roomno</th>
      <th>Creatorid</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chatrooms.each do |chatroom| %>
      <tr>
        <td><%= image_tag(chatroom.roomcover) %></td>
        <td><%= chatroom.roomname %></td>
        <td><%= chatroom.privacy %></td>
        <td><%= chatroom.popularity %></td>
        <td><%= chatroom.memnum %></td>
        <td><%= chatroom.roomno %></td>
        <td><%= chatroom.key %></td>
        <td><%= chatroom.creatorid %></td>
        <td><%= link_to '查看', chatroom %></td>
        <td><%= link_to '编辑', edit_chatroom_path(chatroom) %></td>
        <td><%= link_to '删除', chatroom, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <tr>
          <td><%= sanitize(chatroom.description) %></td> 
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user %>
  <%= link_to '新建聊天室', new_chatroom_path %>
<% end %>