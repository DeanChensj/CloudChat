<h1>
	用户
	<%= @user.username %>
	的个人主页哟
</h1>
<table>
  <thead>
    <tr>
      <th class="name">头像</th>
      <th>成员id</th>
      <th>性别</th>
      <th>手机号</th>
      <th>状态</th>
      <th>最近登录</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>  
        <td class="pic"><%= image_tag(@user.avatar) %></td>
        <td><%= @user.username %></td>
        <td><%= @user.gender %></td>
        <td><%= @user.phone %></td>
        <td><%= @user.status %></td>
        <td><%= @user.updated_at %></td>
        <td><%= link_to '加为好友', "#" %></td>
      </tr>
  </tbody>
</table>
<td><%= link_to '回到外婆桥', :back %></td>
